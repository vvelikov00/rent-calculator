{
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    },
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "build",
    "coverage",
    "test",
    "tests",
    "tmp"]
}
